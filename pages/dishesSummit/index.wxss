/* Global styles */
body {
  font-family: Arial, sans-serif;
  color: #333;
}

/* Container */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

/* Input group */
.input-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 16px;
}

.label {
  font-size: 16px;
  font-weight: bold;
  margin-right: 8px;
}

.input-field {
  flex: 1;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 0 8px;
  font-size: 14px;
}

/* Category selector */
.category-selector {
  margin-bottom: 16px;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  padding: 9px 1.png;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4px;
}

/* Selected ingredients */
.selected-ingredients {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-bottom: 16px;
}

.selected-ingredient-item {
