  background-color: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
  line-height: 20px;
}

.remove-ingredient {
  position: absolute;
  top: 50%;
  right: 4px;
  transform: translateY(-50%);
  font-size: 12px;
  color: #999;
  text-decoration: underline;
  cursor: pointer;
}

.remove-ingredient:hover {
  color: red;
}

/* Main ingredient picker */
.picker {
  width: 100%;
  height: 40px;
  line-height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  text-align: left;
  padding: 0 8px;
}

/* Cooking time picker */
.cooking-time-picker {
  margin-bottom: 16px;
}

/* Upload button and image */
.upload-btn {
  width: 100%;
  height: 40px;
  background-color: #4CAF50;
  color: white;
  border-radius: 4px;
  font-size: 16px;
  text-align: center;
  margin-bottom: 16px;
}

.image-preview {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

.image-preview img {
  width: 100px;
  height: 100px;
  border-radius: 4px;
}

/* Spicy level picker */
.spicy-level-picker {
  margin-bottom: 16px;
}

/* Submit button */
.submit-btn {
  width: 100%;
  height: 44px;
  background-color: #007aff;
  color: white;
  border-radius: 4px;
  font-size: 16px;
  text-align: center;
  margin-top: 16px;
}

.submit-btn:active {
  background-color: #0062cc;
}