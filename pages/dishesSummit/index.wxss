/* dishesSummit.wxss */

/* Global styles */
page{
  height: 100%;
  box-sizing: border-box;
}

/* Container */
.container {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 4px;
  width: 100%;
}

/* Input group */
.input-group {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-bottom: 0px;
  padding: 10px;
}

.label {
  font-size: 14px;
  font-weight: bold;
  margin-right: 4px;
  display: inline-block;
  width: 100px;
}
.inputAndsuggestion {  
  position: relative;  
  padding: 10px; /* 为下拉列表提供更多空间 */  
  margin-bottom: 10px;  
}  
  
.input-field {  
  padding: 5px;  
  flex: 1;  
  height: 30px; /* 增加输入框的高度 */  
  width: 100%; /* 宽度设置为100%，这样它会占据所有可用空间 */  
  border: 1px solid #ccc;  
  border-radius: 4px;  
  margin: 0;  
  font-size: 14px;  
}  
  
.dish-list-container {  
  position: absolute;  
  top: 100%; /* 使下拉列表紧贴在输入框下方 */  
  left: 0;  
  width: 100%;  
  background-color: #fff;  
  border: 1px solid #ccc;  
  border-radius: 4px;  
  max-height: 800px;  
  overflow-y: auto;  
  z-index: 100; /* 确保下拉列表显示在页面上的其他元素之上 */  
}  

.dish-list {
  padding: 5px;
  background-color: #FFFFFF; 
  border: 1px solid #CCCCCC; 
}
.dish-list view {  
    padding: 10px;  
    border-bottom: 1px solid #eee;  
    cursor: pointer;  
}  
  
.dish-list view:last-child {  
    border-bottom: none; 
}
.dish-item {
  padding: 10px;
  border-bottom: 1px solid #CCCCCC;
}

/* Category selector */
.category-selector {
  margin-right: 16px;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4px;
  width: 90%;
  margin-bottom: 16px;
}

/* Selected ingredients */
.selected-ingredients {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-bottom: 16px;
  width: 95%;
}

.selected-ingredient-item {
  display: flex;
  position: relative;
  margin: 8px;
  padding: 12px;
  background-color: #f0f0f0;
  border-radius: 4px;
  font-size: 14px;
  line-height: 20px;
  width: 100%;
}

.remove-ingredient {
  width: 24px; /* 图标宽度 */
  height: 24px; /* 图标高度 */
  margin: 0 5px; /* 图标间距 */
}

.remove-ingredient:hover {
  color: red;
}

/* Main ingredient picker */
.picker {
  width: 100%;
  height: 40px;
  line-height: 40px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  text-align: left;
  padding: 0 8px;
}

/* Cooking time picker */
.cooking-time-picker {
  margin-bottom: 16px;
}

/* Spicy level picker */
.spicy-level-picker {
  margin-bottom: 16px;
}

/* Submit button */
.submit-btn {
  width: 50%;
  height: 44px;
  background-color: grey;
  color: white;
  border-radius: 4px;
  font-size: 16px;
  text-align: center;
  margin-bottom: 16px;
  padding: 8px;
}

.submit-btn:active {
  background-color: Green;
}