/* Global styles */
body {
  font-family: Arial, sans-serif;
  color: #333;
}

/* Header */
.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20px 0;
  background-color: #f5f5f5;
  border-bottom: 1px solid #eee;
}

.userinfo-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 16px;
}

.userinfo-nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-right: 8px;
}

/* Login button */
.btn-login {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
}

