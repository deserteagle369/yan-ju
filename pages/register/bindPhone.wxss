/* Container for the entire page, ensuring everything is centered */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh; /* Full height of the viewport */
  padding: 20px;
  background-color: #f8f8f8; /* Light gray background */
}

/* Styles for the input fields */
.input-field {
  width: 80%; /* Take up most of the container width */
  height: 40px; /* Standard height for input fields */
  margin-bottom: 20px; /* Add some space below each input field */
  padding: 0 15px; /* Padding inside the input fields */
  font-size: 16px; /* Slightly larger font size for readability */
  border-radius: 5px; /* Rounded corners for a modern look */
  border: 1px solid #dcdcdc; /* Light grey border */
  outline: none; /* Remove the default focus outline */
}

/* Style for the bind button */
.bind-button {
  width: 80%; /* Match the width of the input fields */
  background-color: #1aad19; /* WeChat green for brand consistency */
  color: white; /* White text for contrast */
  padding: 10px 0; /* Padding for top and bottom */
  border-radius: 20px; /* Rounded edges */
  font-weight: bold; /* Bold text for the button */
  text-align: center; /* Center the text */
  border: none; /* Remove the default border */
  outline: none; /* Remove the default focus outline */
}

/* Additional styling can be added as needed, such as for error messages or other text */
.error-message {
  color: #ff3b30; /* Standard error message color */
  font-size: 14px; /* Slightly smaller font size */
  width: 80%; /* Match the width of the input fields */
  text-align: left; /* Align the text to the left */
  margin-bottom: 10px; /* Space before the next element */
}
